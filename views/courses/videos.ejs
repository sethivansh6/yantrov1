      <br>
    <h5><div class="alert alert-danger" role="alert">
      <%= error %>
    </div></h5>
    <% } %>
    <% if(success && success.length>0){%>
      <br>
   <h5><div class="alert alert-success" role="alert">
      <%= success %>
    </div></h5>
    
    <% } %>	
  </div>
      
         <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4"></main><h3><%=chap.name%></h3>
         <hr>
         
         <div class="row" style="display:flex; flex-wrap: wrap;">
          <% chap.videos.forEach(function(video){ %>
            <div class="col-sm-6 col-lg-4">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-title"><%=video.caption%></h6>
                  <% if(currentUser && (currentUser.isAdmin == true ||currentUser.isSchoolAdmin == true)){%>
                  <a class="btn btn-sm btn-primary"  href="/chapter/<%= chap._id %>/video/<%=video._id%>/edit">Edit</a>
                  <form  style="display: inline" action="/chapter/<%= chap._id %>/video/<%=video._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">
                      Delete
                    </button>
                  </form>
                  <%}%>
                  <hr>
                  <iframe width="100%" height="220" src="<%= video.link %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
              </div>
            </div>
        <%})%>
          </div>

     </main>
     </div>
     <div class="box" id="box" style="position:fixed;bottom: 25px;left: 20px;">
    
